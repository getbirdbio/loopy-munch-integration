# Loopy Loyalty API Credentials
# Get these from Loopy dashboard → API Settings → Developer
LOOPY_API_KEY=your_loopy_api_key_here
LOOPY_API_SECRET=your_loopy_api_secret_here
LOOPY_MERCHANT_ID=your_loopy_merchant_id_here
LOOPY_BASE_URL=https://api.getloopy.com

# Munch POS API Credentials
# Get these from Munch admin → Account Settings → API
MUNCH_API_KEY=your_munch_api_key_here
MUNCH_MERCHANT_ID=your_merchant_id_here
MUNCH_SITE_ID=your_site_id_here
